extends layout

block content
    h1 Find Jobs
    h2= title
    form(method="POST", action="/final/search")
        table(style='border: 2px solid black')
            tr
                td: h3 What job title are you looking for?
                td: input(type='text' name="category" value=category)
            tr
                td: h3 What city do you want to look in?
                td: input(type='text' name="city" value=city)
            tr
                td
                td: input(type="submit"  value="Find Jobs")

    h3 Total Jobs Found: #{jobs.length} | Average Salary: #{average} | Top Salary: #{topsalary}
    table
        thead
            th  id
            th  Company
            th  Salary
            th  City
            th  Category
        each job in jobs
            tr
                td= job.id
                td #{job.company}
                td #{job.salary.formatMoney(0, "$ ")}
                td #{job.city}
                td #{job.category}
                td: a(href="job/#{job.id}") Details